<h1>Productos</h1>
<form id="formCargarProd">
    <label for="inputNombre">Nombre</label> <input name="nombre" type="text" id="inputNombre" placeholder="Nombre">
    <label for="inputDescripcion">Descripcion</label> <input type="text" name="descripcion" id="inputDescripcion" placeholder="Descripcion">
    {{!-- <label for="inputPrecio">Precio</label> <input type="number" name="precio" id="inputPrecio" placeholder="Precio">
    <label for="inputStock">Stock</label> <input type="number" name="stock" id="inputStock" placeholder="Stock"> --}}
    <label for="inputCategoria">Categoria</label> <input type="text" name="categoria" id="inputCategoria" placeholder="Categoria">
    <button type="submit" id="btnGuardarProducto">Guardar</button>
</form>

<h2>Listado de videojuegos</h2>
{{#if hayProductos}}
<ul>
    {{#each productos}}
    <li> Nombre: {{this.nombre}} || Descripcion: {{this.descripcion}} || Categoria: {{this.categoria}} </li>
    {{/each}}
</ul>
{{else}}
<p>No hay productos</p>
{{/if}}

<script src="/js/cargaProductos.js"></script>